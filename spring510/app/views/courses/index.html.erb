<%= link_to 'New Course', new_course_path %>


<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>1 Col Portfolio - Start Bootstrap Template</title>

      </head>

      <body>
      <!-- Page Content -->
      <div class="container">

        <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">Page Heading
              <small>Secondary Text</small>
            </h1>
          </div>
        </div>
        <!-- /.row -->

        <!-- Project One -->
        <tbody>
          <% @courses.each do |course| %>
          <div class="row">
            <div class="col-md-7">

              <%=
              if FileTest.exist?("#{Rails.root}/app/assets/images/#{course.imgpath}")
                image_tag(course.imgpath , :class =>"img-responsive")
              else
                image_tag('http://placehold.it/700x300' , :class =>"img-responsive")
              end
              %>

              <!--<img class="img-responsive" src="http://placehold.it/700x300" alt="">-->

            </div>
            <div class="col-md-5">
              <%= link_to course do%>  
              <h3 style="a:hover{background-color: yellow;}"><%= course.cid %></h3>
              <h4><%= course.name %></h4>
              <%end%>
              <p><%= course.description %></p>
              <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
          </div>
          <td><%= course.syllabus %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>

      <!-- /.row -->

      <hr>

      <!-- Pagination -->
      <%= will_paginate @courses, renderer: BootstrapPagination::Rails%>

      <!-- /.row -->

      <hr>

      <!-- Footer -->
      <footer>
        <div class="row">
          <div class="col-lg-12">
            <p>Copyright &copy; Your Website 2014</p>
          </div>
        </div>
        <!-- /.row -->
      </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

  </body>

  </html>
